# ============================================
# KOMIKRU - ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values
# ============================================

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Get these from your Supabase project settings
# Project URL: https://app.supabase.com/project/<your-project>/settings/api

VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
VITE_SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Used in edge functions
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================
# CLOUDFLARE R2 CONFIGURATION
# ============================================
# Get these from Cloudflare R2 Dashboard
# https://dash.cloudflare.com/r2

# R2 Account ID (found in R2 dashboard URL)
VITE_R2_ACCOUNT_ID=your-account-id

# R2 API Tokens (create in R2 > Manage R2 API Tokens)
VITE_R2_ACCESS_KEY_ID=your-access-key-id
VITE_R2_SECRET_ACCESS_KEY=your-secret-access-key

# R2 Bucket Configuration
VITE_R2_BUCKET_NAME=komikru
VITE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# R2 Public URL (configure custom domain or use R2.dev)
# Example: https://cdn.your-domain.com or https://pub-xxxxx.r2.dev
VITE_R2_PUBLIC_URL=https://your-r2-public-url

# Used in edge functions
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key
R2_BUCKET_NAME=komikru
R2_PUBLIC_URL=https://your-r2-public-url

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Application URL
VITE_APP_URL=http://localhost:5173
NEXT_PUBLIC_APP_URL=http://localhost:5173

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-here

# ============================================
# SCRAPER CONFIGURATION
# ============================================

# User agent for web scraping
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Scraper cookie (if needed for specific sites)
SCRAPER_COOKIE=

# Delay between requests (milliseconds)
SCRAPER_DELAY_MS=2000

# ============================================
# EMAIL CONFIGURATION (for admin OTP)
# ============================================
# If using Resend for OTP emails
RESEND_API_KEY=your-resend-api-key

# ============================================
# OPTIONAL: ANALYTICS & MONITORING
# ============================================
# Add your analytics/monitoring services here
# VITE_SENTRY_DSN=
# VITE_GA_TRACKING_ID=
